<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewNowPlaying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_of_cinema"
        android:textStyle="bold"
        android:text="@string/Main_page_now_playing"
        android:layout_margin="@dimen/margin_15_dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Now Playing" />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_margin="@dimen/margin_15_dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        android:textSize="@dimen/title_of_cinema"

        android:id="@+id/recyclerViewNowPlaying"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewNowPlaying">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cinemaImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                tools:src="@drawable/thisisengland"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cinemaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_of_cinema"
                android:textStyle="bold"
                android:layout_margin="@dimen/margin_5_dp"
                tools:text="This is England"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/cinemaYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/margin_5_dp"
                    tools:text="2020"
                    android:textSize="@dimen/text_of_cinema"/>

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cinemaLike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@drawable/custom_checkbox"
                    android:layout_weight="2"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/cinemaRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/margin_5_dp"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_of_cinema"
                    tools:text="9.3" />

            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recyclerViewNowPlaying"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="horizontal"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/textViewNowPlaying"-->
<!--        tools:itemCount="1"-->
<!--        tools:listitem="@layout/item"/>-->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewUpcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Main_page_upcoming"
        android:textSize="@dimen/title_of_cinema"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin_15_dp"
        tools:text="Upcoming"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewNowPlaying"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUpcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewUpcoming"
        tools:itemCount="1"
        tools:listitem="@layout/item"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MainFragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>